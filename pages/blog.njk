---
layout: base.njk
title: Blog
permalink: /blog/
---

<div class="max-w-5xl mx-auto">
  <div class="mb-12 animate-fade-up">
    <h2 class="text-3xl font-bold text-text mb-4 flex items-center">
      <span class="w-2 h-8 bg-primary mr-4 rounded-sm"></span>
      The Archive
    </h2>
    <p class="text-muted text-lg max-w-2xl">Deep dives into AI, sales engineering, and personal growth.</p>
  </div>

  <!-- Tag Cloud -->
  <div class="flex flex-wrap gap-2 mb-10 animate-fade-up">
    {%- for tag in collections.tagList -%}
    <a href="/blog/tag/{{ tag | slugify }}/" class="px-3 py-1 bg-primary/10 border border-primary/30 rounded-full text-sm text-primary hover:bg-primary/20 hover:border-primary/50 transition-colors">
      #{{ tag }}
    </a>
    {%- endfor -%}
  </div>

  <!-- Posts Grid -->
  <div class="grid gap-6">
    {%- for post in collections.posts -%}
    <div class="bg-surface border border-border rounded-xl p-6 md:p-8 hover:border-primary/30 transition-all group animate-fade-up">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <span class="px-2 py-1 rounded text-xs font-mono border text-secondary border-secondary/30 bg-secondary/10 inline-block">{{ post.data.category }}</span>
            <span class="text-xs text-muted font-mono">{{ post.date | date }}</span>
            {%- if post.data.draft and env.NODE_ENV != 'production' -%}
            <span class="px-2 py-1 rounded text-xs font-mono border border-yellow-500/50 bg-yellow-500/10 text-yellow-500 inline-block">DRAFT</span>
            {%- endif -%}
          </div>
          <a href="{{ post.url }}">
            <h3 class="text-2xl font-bold text-text group-hover:text-primary transition-colors mb-2">
              {{ post.data.title }}
            </h3>
          </a>
          <p class="text-muted max-w-2xl">
            {{ post.data.excerpt }}
          </p>
        </div>
        <div class="text-xs font-mono text-muted whitespace-nowrap border border-border px-2 py-1 rounded">
          {{ post.data.readingTime }}
        </div>
      </div>

      <div class="flex items-center gap-2 mt-6">
        <span class="text-muted">{% include "icons/tag.svg" %}</span>
        {%- for tag in post.data.tags -%}
        <a href="/blog/tag/{{ tag | slugify }}/" class="text-xs text-primary hover:text-primary/70 transition-colors">#{{ tag }}</a>
        {%- endfor -%}
      </div>
    </div>
    {%- endfor -%}
  </div>
</div>
