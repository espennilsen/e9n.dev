---
layout: base.njk
title: Projects
permalink: /projects/
---

<div>
  <div class="mb-12 animate-fade-up">
    <h2 class="text-3xl font-bold text-text mb-4 flex items-center">
      <span class="w-2 h-8 bg-primary mr-4 rounded-sm"></span>
      Experiments & Code
    </h2>
    <p class="text-muted text-lg max-w-2xl">A collection of side projects, tools, and proof-of-concepts.</p>
  </div>

  <div class="grid md:grid-cols-2 gap-8 animate-stagger">
    {%- for project in collections.projects -%}
    <div class="group bg-surface rounded-xl overflow-hidden border border-border hover:border-primary/50 transition-all">
      <div class="h-48 bg-zinc-900 overflow-hidden relative">
        <div class="absolute inset-0 bg-gradient-to-t from-surface to-transparent z-10"></div>
        <img
          src="{{ project.data.image }}"
          alt="{{ project.data.title }}"
          class="w-full h-full object-cover transition-all duration-500 {% if project.data.status == 'coming-soon' %}opacity-40 grayscale{% else %}opacity-60 group-hover:opacity-80 group-hover:scale-105{% endif %}"
        />
        {%- if project.data.status == 'coming-soon' -%}
        <div class="absolute inset-0 flex items-center justify-center z-20">
          <span class="px-3 py-1 bg-zinc-900/80 border border-yellow-500/30 text-yellow-500 text-xs font-mono uppercase tracking-widest rounded backdrop-blur-sm">
            Coming Soon
          </span>
        </div>
        {%- endif -%}
      </div>
      <div class="p-6 relative z-20 -mt-12">
        <div class="bg-surface p-4 rounded-lg border border-border shadow-lg">
          <h3 class="text-xl font-bold mb-2 flex justify-between items-center text-text">
            {{ project.data.title }}
            <div class="flex gap-3">
              {%- if project.data.github and project.data.status != 'coming-soon' -%}
              <a href="{{ project.data.github }}" class="text-muted hover:text-text">
                {% include "icons/github.svg" %}
              </a>
              {%- endif -%}
              {%- if project.data.link and project.data.status != 'coming-soon' -%}
              <a href="{{ project.data.link }}" class="text-muted hover:text-primary">
                {% include "icons/external-link.svg" %}
              </a>
              {%- endif -%}
            </div>
          </h3>
          <p class="text-muted text-sm mb-4">
            {{ project.data.excerpt }}
          </p>
          <div class="flex flex-wrap gap-2">
            {%- for tech in project.data.tech -%}
            <span class="text-xs font-mono text-secondary bg-secondary/10 px-2 py-1 rounded">
              {{ tech }}
            </span>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
    {%- endfor -%}
  </div>
</div>
