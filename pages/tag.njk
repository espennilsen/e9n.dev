---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /blog/tag/{{ tag | slugify }}/
eleventyComputed:
  title: "Posts tagged: {{ tag }}"
---

<div class="max-w-5xl mx-auto">
  <div class="mb-12 animate-fade-up">
    <a href="/blog/" class="inline-flex items-center text-muted hover:text-primary mb-6 text-sm font-mono transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
      Back to Archive
    </a>
    <h2 class="text-3xl font-bold text-text mb-4 flex items-center">
      <span class="w-2 h-8 bg-primary mr-4 rounded-sm"></span>
      #{{ tag }}
    </h2>
  </div>

  <div class="grid gap-6">
    {%- for post in collections.posts -%}
      {%- if tag in post.data.tags -%}
    <div class="bg-surface border border-border rounded-xl p-6 md:p-8 hover:border-primary/30 transition-all group animate-fade-up">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <span class="px-2 py-1 rounded text-xs font-mono border text-secondary border-secondary/30 bg-secondary/10 inline-block">{{ post.data.category }}</span>
            <span class="text-xs text-muted font-mono">{{ post.date | date }}</span>
          </div>
          <a href="{{ post.url }}">
            <h3 class="text-2xl font-bold text-text group-hover:text-primary transition-colors mb-2">
              {{ post.data.title }}
            </h3>
          </a>
          <p class="text-muted max-w-2xl">
            {{ post.data.excerpt }}
          </p>
        </div>
        <div class="text-xs font-mono text-muted whitespace-nowrap border border-border px-2 py-1 rounded">
          {{ post.data.readingTime }}
        </div>
      </div>

      <div class="flex items-center gap-2 mt-6">
        <span class="text-muted">{% include "icons/tag.svg" %}</span>
        {%- for t in post.data.tags -%}
        <a href="/blog/tag/{{ t | slugify }}/" class="text-xs text-primary hover:text-primary/70 transition-colors">#{{ t }}</a>
        {%- endfor -%}
      </div>
    </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
